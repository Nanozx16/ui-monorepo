{
  "name": "ui-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "format:check": "prettier --check .",
    "lint": "eslint --cache ."
  },
  "workspaces": [
    "marketing",
    "webapp"
  ],
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "eslint": "8.56.0",
    "eslint-config-bloq": "4.0.0",
    "husky": "4.3.8",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9"
  },
  "commitlint": {
    "rules": {
      "body-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "body-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        50
      ],
      "header-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "header-full-stop": [
        2,
        "never",
        "."
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "bloq",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "webapp/**/*.{js,ts,tsx}"
        ],
        "extends": [
          "bloq/next",
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "settings": {
          "next": {
            "rootDir": [
              "webapp"
            ]
          }
        }
      },
      {
        "files": [
          "*.d.ts"
        ],
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ]
      }
    ],
    "root": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,ts,tsx}": "eslint --cache --fix --quiet",
    "*.{css,html,js,json,md,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
